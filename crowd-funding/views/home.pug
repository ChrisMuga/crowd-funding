extends layout

block content

    .container
        .row.my-2.d-flex.justify-content-center
            .col-md-12
                .alert.alert-success.alert-dismissible.fade.show(role="alert") 
                    p #{name}, #{msg}.
                    button(type="button",class="close",data-dismiss="alert",aria-label="Close") 
                        <span aria-hidden="true">&times;</span>
                <div class="jumbotron">
                    <h1 class="display-4">Crowd Fund</h1>
                    <p class="lead">Welcome to the Crowd Fund, a place where people from all walks of life join hands in assisting each other. For we are one family, a community.</p>
                    <hr class="my-4">
                    <p>Thank you for being part of this beautiful community.</p>
                    <a class="btn btn-danger btn-lg" href="#" role="button" data-toggle="modal" data-target="#exampleModal">Start A Campaign</a>
                </div>

        .row.my-2
                //- modal
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            p Hello World?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                        </div>
                    </div>
                </div>
                //- modal
    