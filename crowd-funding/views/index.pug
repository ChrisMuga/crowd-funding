extends layout

block content
  div( class = "row my-4 d-flex justify-content-center" )
    div( class = "col-md-6" )
      form(   action  =   "/register"  , method  = "post"  )
        div( class = "alert alert-primary text-right" ) Crowd Funding
        label Name
        input( type = "text", class = "form-control" name = "name" placeholder = "Enter Name")
        label Email Address
        input( type = "mail", class = "form-control" name = "email" placeholder = "Email Address")
        label Phone Number
        input( type = "text", class = "form-control" name = "phone_number" placeholder = "Phone Number")
        label Location
        input( type = "text", class = "form-control" name = "location" placeholder = "Location")
        label Password
        input( type = "password", class = "form-control" name = "password" placeholder = "Password")
        hr
        div( class = "row d-flex justify-content-center" )
          div( class = "col-md-8" )
            button( type = "submit", class = "btn btn-primary form-control" ) Enter
            button( type = "reset", class = "btn btn-secondary form-control" ) Clear
            hr
            div( class = "row d-flex justify-content-center" )
              a( href = "login" )
                span( class = "badge badge-danger" ) Already Registered? Click Here To Log-In

